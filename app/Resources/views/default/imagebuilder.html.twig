{% extends 'base.html.twig' %}

{% block body %}

<h1>Créez votre VM personalisée</h1>

<form id="dockerBuildForm" action="{{ path('generate') }}" method="post">
    <ul class="is-unstyled">
        <li>
            <input type="radio" class="radio" name="radio" id="r1" checked="checked">
            <label for="r1">Debian 9</label>
        </li>
        <li>
            <input type="radio" class="radio" name="radio" id="r2">
            <label for="r2">CentOS 7</label>
        </li>
    </ul>

    <div id="os_versions_block"></div>

    <label for="tags">Packages pré-installés :</label>
    <input name="tags" id="tags" value="foo,bar,baz" />

    <div class="bottom_generate">
        <input type="submit" id="generate_docker_file" class="btn--success" disabled value="Generate" />
    </div>
</form>

{% endblock %}
